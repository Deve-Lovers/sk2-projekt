{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2021"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "sk/*": [
        "./*"
      ]
    }
  },
  "prettier/prettier": [
    "error",
    {
      "arrowParens": "always",
      "trailingComma": "es5",
      "singleQuote": true,
      "printWidth": 100,
      "endOfLine": "auto"
    }
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json"
}
